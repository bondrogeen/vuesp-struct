{
  "compilerOptions": {
    "paths": { "@/*": ["./src/*"] },
    "target": "ES2020",
    "module": "nodenext",
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src"
  },
  "include": ["src", "example"],
  "exclude": ["node_modules", "build"]
}
